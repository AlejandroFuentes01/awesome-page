---
import BackgroundSection from "../components/BackgroundSection.astro";
import ProductShowcase from "../components/ProductShowcase.astro";
import TitleLogo from "../components/TitleLogo.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/common.css";
import "../styles/crystalblack.css";
---

<Layout title="INNEDIT - CRYSTAL BLACK">
    <div class="crystalblack-page">
        <BackgroundSection>
            <div class="page-content">
                <TitleLogo subtitle="CRYSTAL BLACK" />
                <div class="product-container">
                    <ProductShowcase
                        productImage="CRYSTALBLACK.webp"
                        productAlt="Gorra Crystal Black"
                    />
                </div>
                <div class="product-text animate-fade-in">ESTE PRODUCTO ES ORIGINAL</div>
                <div class="social-icons">
                    <a href="https://inneditclub.com/password" class="social-icon animate-bounce">
                        <img src="SITIO_WEB.webp" alt="Website" />
                    </a>
                    <a href="https://www.tiktok.com/@inneditmx" class="social-icon animate-bounce">
                        <img src="tiktok.webp" alt="TikTok" />
                    </a>
                    <a href="https://www.instagram.com/innedit.mx/" class="social-icon animate-bounce">
                        <img src="INSTA.webp" alt="Instagram" />
                    </a>
                </div>
            </div>
        </BackgroundSection>
    </div>
</Layout>

