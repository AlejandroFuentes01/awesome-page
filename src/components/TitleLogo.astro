---
// TitleLogo.astro - Componente para mostrar el logo de t√≠tulo

export interface Props {
    subtitle?: string;
}

const { subtitle = "MURATRAVIS UTOPIA" } = Astro.props;
---

<div class="title-logo">
    <img
        src="/logos/innedit_logo.webp"
        alt="INNEDIT"
        class="logo-image animate-fade-in"
    />
    <div class="subtitle animate-slide-up">{subtitle}</div>
</div>

<style> 
    .title-logo {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 1.5rem;
        width: 100%;
    }

    .logo-image {
        max-width: 270px;
        height: auto;
        margin-bottom: 0.5rem;
        opacity: 0;
    }

    .subtitle {
        font-size: 1.5rem;
        font-weight: bold;
        letter-spacing: 1px;
        text-align: center;
        background-color: rgba(0, 0, 0, 0.4);
        padding: 0.5rem 1.5rem;
        border-radius: 10px;
        opacity: 0;
        transform: translateY(20px);
    }

    .animate-fade-in {
        animation: fadeIn 1s ease-out forwards;
    }

    .animate-slide-up {
        animation: slideUp 1s ease-out 0.3s forwards;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .logo-image {
            max-width: 180px;
        }

        .subtitle {
            font-size: 1.2rem;
        }
    }
</style>
